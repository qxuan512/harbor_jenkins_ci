        stage("æ„å»ºå‡†å¤‡") {
            steps {
                script {
                    echo "ğŸ”§ æ„å»ºå‡†å¤‡é˜¶æ®µ"
                    
                    // å¤„ç†å”¯ä¸€ID - é€šå¸¸ç”±Pythonè„šæœ¬ç”Ÿæˆå¹¶ä¼ é€’
                    def uniqueId = params.BUILD_UNIQUE_ID
                    if (!uniqueId || uniqueId.trim().isEmpty()) {
