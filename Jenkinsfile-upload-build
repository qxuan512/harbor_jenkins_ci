                        echo "å®é™…ä½¿ç”¨æ–‡ä»¶: ${env.ACTUAL_ARCHIVE_FILE}"
                        echo "æ„å»ºå¹³å°: ${platform}"
                    """
                }
            }
        }

        stage("ä½¿ç”¨ Kaniko æ„å»ºå¹¶æ¨é€é•œåƒ") {
            steps {
                container(name: 'kaniko', shell: '/busybox/sh') {
                                    script {
                    echo "ğŸš€ å¼€å§‹é•œåƒæ„å»º"
                    
                    sh '''#!/busybox/sh
                        echo "ğŸ—ï¸  æ„å»ºé…ç½®"
                        echo "æ„å»ºå¹³å°: ${BUILD_PLATFORM}"
                        
                        # æå–å¹³å°æ¶æ„åç§°ï¼ˆå»æ‰ linux/ å‰ç¼€ï¼‰
                        PLATFORM_ARCH=$(echo "${BUILD_PLATFORM}" | sed 's/linux\\///')
                        echo "å¹³å°æ¶æ„: ${PLATFORM_ARCH}"
                        
                        # æ˜¾ç¤º Kaniko ç‰ˆæœ¬
                        /kaniko/executor version
                        
                        # æ˜¾ç¤ºæ„å»ºä¸Šä¸‹æ–‡
                        echo "ğŸ“‚ æ„å»ºä¸Šä¸‹æ–‡å†…å®¹:"
                        ls -la ${BUILD_CONTEXT_PATH}/
                        
                        # æ‰§è¡Œé•œåƒæ„å»ºå’Œæ¨é€
                        echo "ğŸ”¨ å¼€å§‹æ„å»ºé•œåƒ: ${IMAGE_NAME}:${IMAGE_TAG}-${PLATFORM_ARCH}"
                        echo "ç›®æ ‡å¹³å°: ${BUILD_PLATFORM}"
                        
                        # æ‰§è¡ŒKanikoæ„å»ºå¹¶æ•è·é”™è¯¯
                        echo "ğŸ”§ é…ç½®è·¨å¹³å°æ„å»ºå‚æ•°..."
                        echo "æ„å»ºå¹³å° (BUILDPLATFORM): linux/amd64"
                        echo "ç›®æ ‡å¹³å° (TARGETPLATFORM): ${BUILD_PLATFORM}"
                        echo "ç›®æ ‡æ¶æ„ (TARGETARCH): ${PLATFORM_ARCH}"
                        
                        if /kaniko/executor \\
                            --dockerfile=${DOCKERFILE_PATH} \\
                            --context=${BUILD_CONTEXT_PATH} \\
                            --destination=${IMAGE_NAME}:${IMAGE_TAG}-${PLATFORM_ARCH} \\
                            --destination=${IMAGE_NAME}:latest-${PLATFORM_ARCH} \\
                            --custom-platform=${BUILD_PLATFORM} \\
                            --build-arg TARGETPLATFORM=${BUILD_PLATFORM} \\
                            --build-arg BUILDPLATFORM=linux/amd64 \\
                            --build-arg TARGETOS=linux \\
                            --build-arg TARGETARCH=${PLATFORM_ARCH} \\
                            --build-arg TARGETVARIANT= \\
                            --cache=true \\
                            --cache-ttl=24h \\
                            --cleanup; then
                            echo "âœ… Kanikoæ„å»ºæˆåŠŸ"
                        else
                            echo "âŒ Kanikoæ„å»ºå¤±è´¥"
                            exit 1
                        fi
                        
                        echo "âœ… é•œåƒæ„å»ºå¹¶æ¨é€å®Œæˆ"
                        echo "ğŸ“¦ æ¨é€çš„é•œåƒ:"
                        echo "   - ${IMAGE_NAME}:${IMAGE_TAG}-${PLATFORM_ARCH} (${BUILD_PLATFORM})"
                        echo "   - ${IMAGE_NAME}:latest-${PLATFORM_ARCH} (${BUILD_PLATFORM})"
                        
                        # éªŒè¯é•œåƒæ˜¯å¦çœŸçš„æ¨é€æˆåŠŸ
                        echo "ğŸ” éªŒè¯é•œåƒæ¨é€..."
                        if command -v docker > /dev/null 2>&1; then
                            echo "ä½¿ç”¨dockeréªŒè¯é•œåƒæ˜¯å¦å­˜åœ¨"
                            # æ³¨æ„ï¼šåœ¨Kanikoå®¹å™¨ä¸­é€šå¸¸æ²¡æœ‰dockerå‘½ä»¤
                        fi
                        
                        # ä½¿ç”¨curléªŒè¯Harbor API
                        echo "ä½¿ç”¨Harbor APIéªŒè¯é•œåƒ..."
                        if command -v curl > /dev/null 2>&1; then
                            # å°è¯•è°ƒç”¨Harbor APIæ£€æŸ¥é•œåƒ
                            HARBOR_CHECK_URL="https://${HARBOR_REGISTRY}/api/v2.0/projects/test-project/repositories/my-app/artifacts"
                            echo "æ£€æŸ¥URL: ${HARBOR_CHECK_URL}"
                            # æ³¨æ„ï¼šè¿™é‡Œéœ€è¦è®¤è¯ä¿¡æ¯
                        fi
                    '''
                }
                }
            }
        }

        stage("éªŒè¯é•œåƒæ¨é€") {
            steps {
                script {
                    echo "ğŸ” éªŒè¯é•œåƒæ˜¯å¦æˆåŠŸæ¨é€åˆ° Harbor"
                    
